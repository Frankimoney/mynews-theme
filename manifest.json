{
    "name": "MyNews",
    "short_name": "MyNews",
    "description": "A clean, modern WordPress theme for news websites and blogs",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#ffffff",
    "theme_color": "#0d6efd",
    "icons": [
        {
            "src": "assets/images/app-icon-192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "assets/images/app-icon-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "assets/images/app-icon-180.png",
            "sizes": "180x180",
            "type": "image/png"
        }
    ],
    "orientation": "portrait-primary",
    "prefer_related_applications": false,
    "screenshots": [
        {
            "src": "assets/images/screenshot-mobile.png",
            "sizes": "750x1334",
            "type": "image/png",
            "platform": "narrow",
            "label": "MyNews Mobile"
        }
    ],
    "categories": ["news", "magazines", "lifestyle"],
    "shortcuts": [
        {
            "name": "Latest News",
            "short_name": "Latest",
            "url": "/?latest",
            "icons": [{ "src": "assets/images/app-icon-192.png", "sizes": "192x192" }]
        },
        {
            "name": "Popular News",
            "short_name": "Popular",
            "url": "/?popular",
            "icons": [{ "src": "assets/images/app-icon-192.png", "sizes": "192x192" }]
        }
    ],
    "lang": "en",
    "dir": "ltr",
    "scope": "/",
    "id": "mynews",
    "display_override": ["standalone", "window-controls-overlay", "minimal-ui"]
}
